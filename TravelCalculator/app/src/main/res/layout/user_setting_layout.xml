<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/MyActiobBarTheme"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:titleTextColor="@android:color/white"
        />

    <Switch
        android:id="@+id/switch_updateRealtime"
        style="@style/SwitchStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/text_RealtimeUpdateCurrency"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_setting"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/textView_RealtimeUpdate_Info"
        style="@style/SwitchInfoStyle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/updateInfo"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/switch_updateRealtime"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/textView_orginialCountry"
        style="@style/FieldTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Original Country"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/textView_RealtimeUpdate_Info"
        app:layout_constraintStart_toStartOf="@id/textView_RealtimeUpdate_Info"
        android:layout_marginTop="40sp"
        />

    <TextView
        android:id="@+id/usersetting_textview_countrylist"
        style="@style/SearchBarText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:editable="false"
        app:layout_constraintTop_toBottomOf="@id/textView_orginialCountry"
        app:layout_constraintStart_toStartOf="@id/textView_orginialCountry"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20sp"
        android:layout_marginRight="20dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>