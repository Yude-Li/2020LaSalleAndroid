<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:titleTextColor">#ffffff</item>
    </style>

    <style name="MyActiobBarTheme" parent="@style/Theme.AppCompat.Light">
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">#102f4b</item>
        <item name="android:titleTextColor">#ffffff</item>
        <item name="android:subtitleTextColor">#ffffff</item>
    </style>

    <style name="MyCalculatorNumberBtn" parent="@style/Theme.AppCompat.Light">
        <item name="android:textColor">#E6E6E6</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:textSize">22dp</item>
    </style>

    <style name="MyCalculatorTextBtn" parent="@style/Theme.AppCompat.Light">
        <item name="android:textColor">#E6E6E6</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:textSize">18dp</item>
    </style>

</resources>
