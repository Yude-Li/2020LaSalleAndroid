<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:titleTextColor">#ffffff</item>
        <item name="android:windowBackground">@color/calc_background</item>
    </style>

    <style name="MyActiobBarTheme">
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">#32425b</item>
        <item name="android:titleTextColor">#ffffff</item>
        <item name="android:subtitleTextColor">#ffffff</item>
    </style>

    <style name="MyCalculatorNumberBtn">
        <item name="android:textColor">#E6E6E6</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="MyCalculatorTextBtn">
        <item name="android:textColor">#E6E6E6</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyCalculatorDisplayText">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="MyCalculatorDisplayIcon">
        <item name="android:scaleType">centerInside</item>
        <item name="android:padding">20dp</item>
    </style>

    <style name="SearchBarText">
        <item name="android:textColor">#E2E2E2</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColorHint">#797979</item>
        <item name="android:background">@drawable/searchbar_background</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="SearchBarBtn">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="FieldTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#E2E2E2</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">#E2E2E2</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="SwitchInfoStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#E2E2E2</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

</resources>
